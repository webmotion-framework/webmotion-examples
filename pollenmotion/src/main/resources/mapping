[config]
package.views=WEB-INF/org.debux.webmotion.pollmotion
package.base=org.debux.webmotion.pollmotion
server.listener.class=org.debux.webmotion.sitemesh.SiteMeshListener,org.debux.webmotion.jpa.JpaListener

[filters]
GET          /page/*                         SiteMesh.decorate       layout=layout.jsp

[actions]
GET         /                                redirect:/page/index
GET         /page/index                      view:index.jsp
GET         /page/view/{poll}                MainController.getPoll   entityName=org.debux.webmotion.pollmotion.entity.Poll
GET         /page/new                        view:new.jsp
GET         /page/complete                   view:complete.jsp

[filters]
*            /page/*                       Jpa.tx                  persistenceUnitName=pollmotion
*            /service/poll                 Jpa.tx                  persistenceUnitName=pollmotion,entityName=org.debux.webmotion.pollmotion.entity.Poll
*            /service/vote                 Jpa.tx                  persistenceUnitName=pollmotion,entityName=org.debux.webmotion.pollmotion.entity.Vote

[actions]
POST         /service/poll                  MainController.createPoll
POST         /service/vote                  MainController.createVote
